                <span asp-validation-for="Patient_First_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient_Middle_Name" class="control-label"></label>
                <input asp-for="Patient_Middle_Name" class="form-control" />
                <span asp-validation-for="Patient_Middle_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient_Last_Name" class="control-label"></label>
                <input asp-for="Patient_Last_Name" class="form-control" />
                <span asp-validation-for="Patient_Last_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient_Email" class="control-label"></label>
                <input asp-for="Patient_Email" class="form-control" />
                <span asp-validation-for="Patient_Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient_Password" class="control-label"></label>
                <input asp-for="Patient_Password" class="form-control" />
                <span asp-validation-for="Patient_Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient_Area" class="control-label"></label>
                <input asp-for="Patient_Area" class="form-control" />
                <span asp-validation-for="Patient_Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient_Street" class="control-label"></label>
                <input asp-for="Patient_Street" class="form-control" />
                <span asp-validation-for="Patient_Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient_City" class="control-label"></label>
                <input asp-for="Patient_City" class="form-control" />
                <span asp-validation-for="Patient_City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient_National_Number" class="control-label"></label>
                <input asp-for="Patient_National_Number" class="form-control" />
                <span asp-validation-for="Patient_National_Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient_Gender" class="control-label"></label>
                <input asp-for="Patient_Gender" class="form-control" />
                <span asp-validation-for="Patient_Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient_Social_Status" class="control-label"></label>
                <input asp-for="Patient_Social_Status" class="form-control" />
                <span asp-validation-for="Patient_Social_Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient_Birth_Date" class="control-label"></label>
                <input asp-for="Patient_Birth_Date" class="form-control" />
                <span asp-validation-for="Patient_Birth_Date" class="text-danger"></span>
            </div>  
            <table id="table" class="table">
                <thead>
                    <tr>
                        <th>Phone Number</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                        @*@foreach(var item in Model.Patient_Phone_Numbers)*@
                        @for (int i = 0; i < Model.Patient_Phone_Numbers.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input asp-for="@Model.Patient_Phone_Numbers[i].Patient_Phone_Number" class="form-control" />
                                </td>
                                <td>
                                    <button id="btnadd-@i" class="btn btn-sm btn-secondary visible"
                                            onclick="AddPhoneNumber(this);">Add New Number</button>
                                    <button id="btndelete-@i" class="btn btn-sm btn-danger invisible"
                                            onclick="DeletePhoneNumber(this);">Delete</button>
                                </td>
                            </tr>
                        }
                </tbody>
            </table>
            <input type="hidden" id="hdn"  value="0" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">

        function DeletePhoneNumber(btn) {
            $(btn).closest('tr').remove();
        }

        function AddPhoneNumber(btn) {
            var table = document.getElementById('table');
            var rows = document.getElementsByTagName('tr');
            var rowOuterHtml = rows[rows.length - 1].outerHTML;

            var lastRowIndex = document.getElementById('hdn').value;
            var nextRowIndex = eval(lastRowIndex) + 1;
            document.getElementById('hdn').value = nextRowIndex;

            rowOuterHtml.replaceAll('_' + lastRowIndex + '_', '_' + nextRowIndex + '_');
            rowOuterHtml.replaceAll('[' + lastRowIndex + ']', '[' + nextRowIndex + ']');
            rowOuterHtml.replaceAll('-' + lastRowIndex , '-' + nextRowIndex );

            var newRow = table.insertRow();
            newRow.innerHTML = rowOuterHtml;

            var btnAdd = btn.id;
            var btnDelete = btnAdd.replaceAll('btnadd', 'btndelete');

            var btndelete = document.getElementById('btndelete');
            btndelete.classList.remove("visible");
            btndelete.classList.add("invisible");

            var btnadd = document.getElementById('btnadd');
            btnadd.classList.remove("visible");
            btnadd.classList.add("invisible");
           

        }
    </script>
}
