            <th>
                @Html.DisplayNameFor(model => model.Employee_Job)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_Qualifications)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_Social_Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_Birth_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_Birth_Place)
