                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_Area)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_X_Y)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_Family_Members)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_Job)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_Qualifications)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_Social_Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_Birth_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_Birth_Place)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_Hire_Date)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Employee_Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Employee_Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Employee_Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
