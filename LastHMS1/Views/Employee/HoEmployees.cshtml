            <th>
                @Html.DisplayNameFor(model => model.Employee_National_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_X_Y)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_Family_Members)
