@model IEnumerable<LastHMS1.Models.Employee>

@{
    ViewData["Title"] = "HoEmployees";
}

<h1>HoEmployees</h1>

<p>
    <a asp-action="CreateEmp" asp-route-id="@ViewBag.HospitalId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
