@model IEnumerable<LastHMS1.Models.Hospital>

<div class="limiter">
    <div class="container-login100" style="background-image: url('../images/bg-01.jpg');">
        <div class="wrap-login100">
            <form asp-action="LogIn" method="post" class="login100-form validate-form">
                <img src="~/Vikings/Home/avatar/res.png" class="text-centr"/>
                <span class="login100-form-title p-b-34 p-t-27">
                    تسجيل دخول
                </span>

                <div class="wrap-input100 validate-input" data-validate="Enter username">
                    <input class="input100" type="text" name="email" placeholder="إسم المستخدم" required>
                    <span class="focus-input100" data-placeholder="&#xf207;"></span><span class="input-group-text" id="basic-addon2">&#64;Rsp.com</span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Enter password">
                    <input class="input100" type="password" name="password" placeholder="كلمة السر" required>
                    <span class="focus-input100" data-placeholder="&#xf191;"></span>
                </div>
                <div class="hospital">
                    <i class="fas fa-hospital-user hos-icon"></i>
                    <select name="hospital" class="hos-select">
                        @foreach (var item in Model)
                        {
                            <option value="@item.Ho_Id"> @item.Ho_Name</option>
                        }
                    </select>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        تسجيل دخول
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>


<div id="dropDownSelect1"></div>

@section Styles{
    <link href="~/Vikings/Resception/LogIn/main.css" rel="stylesheet" />
    <link href="~/Vikings/Resception/LogIn/util.css" rel="stylesheet" />
}