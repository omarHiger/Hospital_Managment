@model IEnumerable<Vikings_2.Models.Patient>
@using Vikings_2.Class_Attriputes;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patient_Full_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient_Email)
            </th>
            <th>
                @Html.DisplayNameFor(model =>  model.Patient_Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient_Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient_National_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient_Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient_Social_Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient_Birth_Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_Full_Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Patient_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_Location)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Patient_National_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_Social_Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_Birth_Date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Patient_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Patient_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Patient_Id">Delete</a>
                <a asp-controller="Preview" asp-action="Index" asp-route-patientId="@item.Patient_Id">Previews</a>
                @*<a asp-controller="CategoryItem" asp-action="Index" asp-route-categoryId="@item.Id" class="btn btn-outline-secondary btn-sm">Update Items</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
